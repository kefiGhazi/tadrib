{% extends 'HomeBundle:Default:layout2.html.twig' %}

{% block body %}
    <style media="screen">
        .noPrint{ display: block; }
        .yesPrint{ display: block !important; }
    </style>
    <style media="print">
        .noPrint{ display: none; }
        .yesPrint{ display: block !important; }
    </style>
    <div class="container-fluid" onload="window.print();" >
        <div class="content-page" style="margin: 10px">
            <div class="content" style="margin-top: 0px;">
                <div class="row">
                    <div class="col-sm-12 col-lg-12 col-xs-12">
                        <div class="card-box print">
                        <div class="row">
                            <h3 class="text-center">قائمة المشاركين   <span> {{ D.nom}} -- ({{ D.idMarkez.nom}})</span></h3>
                            <br />
                            <table  class="table table-striped table-bordered " role="grid" >
                                <thead>
                                    <tr>
                                        <th>الاسم و اللقب</th>
                                        <th>المعرف الكشفي</th>
                                        <th>الجهة</th>
                                        <th>القسم</th>
                                        <th>النتيجة</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for inscrit in inscrits %}
                                        <tr>
                                            <td>{{ inscrit.idChef.nom }} {{ inscrit.idChef.prenom }}</td>
                                            <td>{{ inscrit.idChef.inscrit }}</td>
                                            <td>{{ inscrit.idChef.idJiha.name }}</td>
                                            <td>{{ inscrit.idKesm.nom }}</td>
                                            <td>
                                                  {%if inscrit.result == 1%}
                                                    <span class="label label-success">يؤهل</span>
                                                    {%elseif inscrit.result == 2%}
                                                    <span class="label label-danger" >يعيد</span>
                                                {%else%}
                                                    <span class="label label-default">في طور الإنجاز</span>
                                                {%endif%}
                                            </td>

                                        </div>
                                    </div>
                                        </tr>
                                        
                                    {% endfor %}
                                </tbody>
                            </table>
                            <br />
                        <div class="col-lg-6">
                            <h3 class="text-center">قائد الدراسة :    <span> {{ D.chef }}</span></h3>
                        </div>
                        <div class="col-lg-6">
                            <h3 class="text-center">المساعدون :    </h3>
                        </div>
                        </div>
                </div>
            </div>
        </div>
    </div>
<script>
    window.print();
</script>

        {% endblock %}

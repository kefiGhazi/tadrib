{% extends 'HomeBundle:Default:layout2.html.twig' %}
{% block body %}
    <div class="container-fluid">
        <!-- Page Heading -->
        <!-- /.row -->
        <!-- Page Content -->
        <div class="content-page" style="margin: 10px">
            <div class="row">
                <div class="col-sm-12 col-lg-12 col-xs-12">
                    <div class="card-box">
                        <div class="card-box">
                            <h1 class="text-center">المنظومة الرقمية لتنمية القيادات  </h1>
                            <img  src="{{ asset('bundles/home/images/tadrib.png')}}" width="50px" style="top: 8px;position:  absolute;right: 300px;width: 100px;">
                        </div>
                    </div>

                </div>
            </div>
            <div class="content" style="margin-top: 0px;">
                <!-- Start content -->
                <div class="row">

                    {%if message is defined%}

                        <div class="col-sm-12 col-lg-12 col-xs-12">
                            <div class="alert alert-warning text-center">
                                <strong>غير موجود بقاعدة البينات.</strong><br>
                                <strong>إتصل برئيس اللجنة الجهوية للتدريب للتثبت.</strong>
                            </div>

                        </div>

                    {%endif%}

                    <div class="col-sm-12 col-lg-12 col-xs-12 ">
                        <div class="row">

                            <div class="col-sm-6 col-lg-6 col-xs-12 col-lg-offset-3">

                                <div class="widget-simple card-box ">
                                    <h2 class="text-center"> دخول للملف الشخصي </h2>

                                    <div>
                                        {{ form_start(form) }}
                                        <div class="form-group">
                                            <label>بطاقة التعريف الوطنية</label>
                                            {{ form_widget(form.cin) }}
                                        </div>
                                        <div class="form-group">
                                            <label>المعرف الكشفي</label>
                                            {{ form_widget(form.numInscrit ,{'attr': {'class': 'form-control'} }) }}
                                        </div>

                                        <input type="submit" class="btn btn-primary btn-lg" value="مشاهدة ">
                                        {{ form_end(form) }}
                                    </div>

                                </div>
                            </div>

                        </div>
                    </div>

                </div>

            </div>
        </div>
        <footer class="footer text-right" style="right: 0px">
            <div class="row">
                <div class="col-md-5"><span style="font-size: 20px;" class="pull-left">الكشافة التونسية</span></div>
                <div class="col-md-2"><img src="{{ asset('bundles/home/images/favicon_1.png')}}" width="50px"></div>
                <div class="col-md-5"><span class="pull-right" style="font-size: 20px;">اللجنة الوطنية لتنمية القيادات -- لجنة الثقافة الرقمية</span> </div>
            </div>
        </footer>

    {% endblock %}


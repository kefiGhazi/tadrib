                            <div class="card-box col-sm-4 col-lg-4 col-xs-12"> 
                                <h4>المجموع</h4>
                                <table class="table table table-hover m-0">
                                        <thead>
                                            <tr>
                                                <th>القسم</th>
                                                <th>التمهيدية</th>
                                                <th>الشارة الخشبية</th>
                                                <th>المجموع</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% set TotalT = 0%}
                                            {% set TotalCH = 0%}
                                            {% set Total = 0%}

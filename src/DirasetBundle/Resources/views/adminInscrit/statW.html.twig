                                                <tr>
                                                    <th scope="row">{{stat.name}}</th>
                                                    <td>{{stat.tamhidiya}}</td>
                                                    <td>{{stat.chara}}</td>
                                                    <td>{{stat.total}}</td>
                                                </tr>
                                                {% set TotalT = TotalT + stat.tamhidiya%}
                                                {% set TotalCH = TotalCH + stat.chara%}
                                                {% set Total = Total + stat.total%}
                                            {%endfor%}
                                            <tr>
                                                <th scope="row">المجموع</th>
                                                    <td>{{TotalT}}</td>
                                                    <td>{{TotalCH}}</td>
                                                    <td>{{Total}}</td>
                                            </tr>
                                        </tbody>
